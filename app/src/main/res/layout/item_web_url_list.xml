<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
>
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:cardBackgroundColor="@android:color/white"
                                       app:layout_constraintCircleRadius="@dimen/x15"
                                       android:layout_margin="@dimen/x12"
                                       app:cardElevation="@dimen/x4"

    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="?android:attr/selectableItemBackground"
                      android:gravity="center_vertical"
                      android:padding="@dimen/x24"
        >

            <ImageView android:layout_width="@dimen/x48" android:layout_height="@dimen/x48"
                       android:id="@+id/web_url_item_icon"
                       android:layout_marginEnd="@dimen/x24"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/web_url_item_title" android:text="@string/app_name"
                      android:textSize="@dimen/x24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>