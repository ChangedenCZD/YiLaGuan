<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:cardBackgroundColor="@android:color/white"
                                       app:layout_constraintCircleRadius="@dimen/x15"
                                       android:layout_margin="@dimen/x24"
                                       app:cardElevation="@dimen/x4"
    >

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/url_type_child_item_title"
                      android:textSize="@dimen/x32"
                      android:padding="@dimen/x32"
                      android:textColor="@android:color/darker_gray"
            />
            <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:id="@+id/url_type_child_item_list"
                                                       android:paddingStart="@dimen/x12"
                                                       android:paddingEnd="@dimen/x12"
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>